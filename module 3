#include "scores.h"
#include <fstream>
#include <iostream>

using namespace std;

const string SCORE_FILE = "scores.txt";

void loadScores(map<string, int>& scores) {
    ifstream file(SCORE_FILE);
    string name;
    int score;

    while (file >> name >> score) {
        scores[name] = score;
    }
    file.close();
}

void saveScores(const map<string, int>& scores) {
    ofstream file(SCORE_FILE);
    for (const auto& pair : scores) {
        file << pair.first << " " << pair.second << endl;
    }
    file.close();
}

void showScores() {
    map<string, int> scores;
    loadScores(scores);

    if (scores.empty()) {
        cout << "No scores recorded yet.\n";
    } else {
        cout << "\n-- Previous Scores --\n";
        for (const auto& pair : scores) {
            cout << pair.first << ": " << pair.second << " win(s)" << endl;
        }
    }
}

void deleteScores() {
    ofstream file(SCORE_FILE, ios::trunc);
    file.close();
    cout << "All scores have been deleted.\n";
}

